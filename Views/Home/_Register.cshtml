@model User;


<div class="offset-sm-3 col-sm-6">
    <div class="card border border-dark slightly-transparent">
        <div class="card-header bg-dark text-white">
            <h3 class="my-2">Sign Up</h3>
        </div>
        <div class="card-body">
            <form action="/register" method="post" class="m-2">
                <div class="form-group mb-3">
                    <label>Name:</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group mb-3">
                    <label>Email:</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group mb-3">
                    <label>Password:</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group mb-4">
                    <label>Confirm:</label>
                    <input type="password" asp-for="Confirm" class="form-control" />
                    <span class="text-danger" asp-validation-for="Confirm"></span>
                </div>
                <input type="submit" value="Register" class="btn btn-outline-dark full-width" />
            </form>
        </div>
    </div>
</div>